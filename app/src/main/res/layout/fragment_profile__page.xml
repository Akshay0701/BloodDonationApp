<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_pages.Profile_Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/profileicon"
            android:layout_height="wrap_content"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:text="Akshay Jadhav"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_edit_red"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="Work"
            android:gravity="center_horizontal"
            android:textSize="15dp"
            android:layout_height="wrap_content"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
                android:orientation="vertical"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="0"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Points"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/bloodlogo"
                    android:layout_height="90dp"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Donor"
                    android:layout_weight="2"
                    android:textColor="@color/colorDark"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="0"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Shares"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"></TextView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"></ImageView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/ic_star_red"
                android:text="favourite"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/outlinebuttonshape"
                android:layout_height="wrap_content"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Donate Blood"
                android:textColor="@color/colorAccent"
                android:background="@drawable/buttonshape"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginBottom="-40dp"
            android:src="@drawable/outlinebuttonshape"
            android:layout_height="match_parent"></ImageView>
    </LinearLayout>

</RelativeLayout>